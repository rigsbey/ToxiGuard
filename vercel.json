{
  "redirects": [
    {
      "source": "/:path*",
      "destination": "https://www.toxiguard.site/:path*",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "toxiguard.site"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" }
      ]
    }
  ]
} 