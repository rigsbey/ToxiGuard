{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://toxiguard.site"
  },
  "framework": "nextjs",
  "regions": ["fra1"],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "toxiguard.site"
        }
      ],
      "destination": "https://www.toxiguard.site/$1",
      "permanent": true
    }
  ]
} 